


<%= form_for @song do |f| %>
<% if @song.errors.any? %>
    <h2>Errors</h2>
    <ul>
        <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br><br>
    <%= f.label :released %>
    <%= f.check_box :released %>
    <br><br>
    <%= f.label :release_year %>
    <%= f.text_field :release_year %>
    <br><br>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
    <br><br>
    <%= f.label :genre%>
    <%= f.text_field :genre %>
    <br><br>
    <%= f.submit %>

<% end %>